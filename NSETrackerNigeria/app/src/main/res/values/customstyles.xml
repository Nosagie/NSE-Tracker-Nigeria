<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="colorScheme">
        <item name="android:background">#003300</item>
    </style>

    <style name="mainActivityButton" parent="Theme.AppCompat.Light">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">25</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:background">#003300</item>
    </style>

    <style name="marketSnapshotTitles">
        <item name="android:textColor">#003300</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="marketSnapshotTexts">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">26sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="marketSnapshotItems">
        <item name="android:background">#fff</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="gainersAndLosersListTexts">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialogItem" parent="listText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#003300</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="equityDialogItem" parent="dialogItem">
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>