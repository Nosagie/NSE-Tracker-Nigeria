<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"

    tools:context="com.stockwatch.nosagie.nsetracker.MarketSnapshotFragment">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Small"
        android:id="@+id/mrktSnapshotProgressBar"
        tools:targetApi="lollipop"
        android:layout_gravity="center|center_horizontal|center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mrktSnapshotErrorTextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mrktSnapshotContent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:gravity="left"
            style="@style/marketSnapshotItems">
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marketStatusTitle"
                style="@style/marketSnapshotTitles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/marketStatusTextView"
                style="@style/marketSnapshotTexts"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            style="@style/marketSnapshotItems"
            android:gravity="left"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allShareIndexTitle"
                style="@style/marketSnapshotTitles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/allShareIndexTextView"
                style="@style/marketSnapshotTexts"
               />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/marketSnapshotItems">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totalTradesTitle"
                style="@style/marketSnapshotTitles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalTradesTextView"
                style="@style/marketSnapshotTexts"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="left"
            android:orientation="horizontal"
            style="@style/marketSnapshotItems">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tradeVolumeTitle"
                style="@style/marketSnapshotTitles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tradeVolumeTextView"
                style="@style/marketSnapshotTexts"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical"
            style="@style/marketSnapshotItems">


        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tradeValueTitle"
                    style="@style/marketSnapshotTitles"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tradeValueTextView"
                    style="@style/marketSnapshotTexts"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:gravity="left"
            style="@style/marketSnapshotItems">
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marketCapTitle"
                style="@style/marketSnapshotTitles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/marketCapTextView"
                style="@style/marketSnapshotTexts"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:padding="0dp">
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/marketsnapshot_add_unit_id">
                </com.google.android.gms.ads.AdView>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
